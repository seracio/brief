{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "outDir": "build",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2018", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": true
    },
    "exclude": ["node_modules", "build", "scripts", "data"]
}
